<h1>Listing things</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Url</th>
    <th>Type</th>
    <th>Order</th>
    <th>Rating</th>
    <th>List</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @things.each do |thing| %>
  <tr>
    <td><%= thing.name %></td>
    <td><%= thing.content %></td>
    <td><%= thing.url %></td>
    <td><%= thing.thing_type %></td>
    <td><%= thing.order %></td>
    <td><%= thing.rating %></td>
    <td><%= thing.list_id %></td>
    <td><%= link_to 'Show', thing %></td>
    <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
    <td><%= link_to 'Destroy', thing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

